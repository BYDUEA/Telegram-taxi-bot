import logging
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, MessageHandler, filters, ContextTypes

# âœ… Siz yuborgan token va IDlar:
BOT_TOKEN = "8067132525:AAEt-UELXYTK0fKRA99jFBeX2GxddxEV_TI"
ADMIN_ID = 8053258736
PRIVATE_GROUP_ID = -1002813733555

# ğŸš– Kalit soâ€˜zlar roâ€˜yxati (buyurtma xabarlarini aniqlash uchun)
KEYWORDS = [
    'taksi kerak', 'taksi bormi', 'taxi kerak', 'taxi bormi',
    'taxsi garak', 'taksi garak', 'pochta bo', 'pochto bor',
    'nicha som', 'nicha so'm', 'moshin bomi', 'moshin bormi','Ğ½Ğ¸Ñ‡Ñ‡Ğ° ÑÑƒĞ¼','Ğ½Ğ¸Ñ‡Ñ‡Ğ° ÑĞ¾Ğ¼','Ğ½Ğ¸Ñ‡Ğ° ÑĞ¾Ğ¼',Ğ½Ğ¸Ñ‡Ğ° ÑÑƒĞ¼','Ñ‚Ğ°ĞºÑĞ¸ Ğ³Ğ°Ñ€Ğ°Ğº','Ñ‚Ğ°Ñ…ÑĞ¸ Ğ³Ğ°Ñ€Ğ°Ğº','
